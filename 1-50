        // ЗАДАНИЕ 31: Объяснение различия между процедурой и функцией на примере
        static void DemonstrateDifference31()
        {

            void GreetProcedure(string name)
            {
                Console.WriteLine($"Привет, {name}!");
            }

            string GreetFunction(string name)
            {
                return $"Привет, {name}!";
            }

            GreetProcedure("Анна");
            string greeting = GreetFunction("Петр");
            Console.WriteLine(greeting);
        }

        // ЗАДАНИЕ 32: Объяснение различия между процедурой и функцией на примере
        static void DemonstrateDifference32()
        {
            void PrintSumProcedure(int a, int b)
            {
                Console.WriteLine($"Сумма: {a + b}");
            }

            int CalculateSumFunction(int a, int b)
            {
                return a + b;
            }

            PrintSumProcedure(3, 4);
            int result = CalculateSumFunction(3, 4);
            Console.WriteLine($"Результат функции: {result}");
        }

