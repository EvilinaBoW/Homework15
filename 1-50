                counter++;
                Console.WriteLine($"Счетчик: {counter}");
            }

            int IncrementFunction(int value)
            {
                return value + 1;
            }

            IncrementProcedure();
            counter = IncrementFunction(counter);
            Console.WriteLine($"Новое значение: {counter}");
        }

