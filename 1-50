        // ЗАДАНИЕ 27: Объяснение различия между процедурой и функцией на примере
        static void DemonstrateDifference27()
        {

            void ProcedureExample(int x)
            {
                Console.WriteLine($"Процедура: получено значение {x}");
            }

            int FunctionExample(int x)
            {
                return x * 2;
            }

            ProcedureExample(5);
            Console.WriteLine($"Функция: результат = {FunctionExample(5)}");
        }

