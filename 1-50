        // ЗАДАНИЕ 22: Функция, проверяющая, является ли строка палиндромом
        static bool IsPalindrome22(string str)
        {
            if (string.IsNullOrEmpty(str)) return true;

            string cleanStr = str.Replace(" ", "").ToLower();
            int left = 0;
            int right = cleanStr.Length - 1;

            while (left < right)
            {
                if (cleanStr[left] != cleanStr[right])
                    return false;
                left++;
                right--;
            }
            return true;
        }

