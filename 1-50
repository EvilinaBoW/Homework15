        // ЗАДАНИЕ 40: Объяснение различия между процедурой и функцией на примере
        static void DemonstrateDifference40()
        {

            void SwapProcedure(ref int a, ref int b)
            {
                int temp = a;
                a = b;
                b = temp;
            }

            // Функция возвращает кортеж
            (int, int) SwapFunction(int a, int b)
            {
                return (b, a);
            }

            int x = 5, y = 10;
            Console.WriteLine($"До: x={x}, y={y}");
            SwapProcedure(ref x, ref y);
            Console.WriteLine($"После процедуры: x={x}, y={y}");

            var result = SwapFunction(x, y);
            Console.WriteLine($"Результат функции: {result}");
        }

        // ЗАДАНИЕ 41: Объяснение различия между процедурой и функцией на примере
        static void DemonstrateDifference41()
        {
            string[] names = { "Анна", "Петр", "Мария" };

            void PrintNamesProcedure(string[] array)
            {
                foreach (string name in array)
                {
                    Console.WriteLine(name);
                }
            }

            string FormatNamesFunction(string[] array)
            {
                return string.Join(", ", array);
            }

            Console.WriteLine("Процедура:");
            PrintNamesProcedure(names);

            Console.WriteLine("Функция:");
            Console.WriteLine(FormatNamesFunction(names));
        }

        // ЗАДАНИЕ 42: Функция, проверяющая, является ли строка палиндромом
        static bool IsPalindrome42(string str)
        {
            if (string.IsNullOrEmpty(str)) return true;

            string cleanStr = str.Replace(" ", "").ToLower();
            int left = 0;
            int right = cleanStr.Length - 1;

            while (left < right)
            {
                if (cleanStr[left] != cleanStr[right])
                    return false;
                left++;
                right--;
            }
            return true;
        }

        // ЗАДАНИЕ 43: Объяснение различия между процедурой и функцией на примере
        static void DemonstrateDifference43()
        {

            void ProcessNumberProcedure(int number)
            {
                Console.WriteLine($"Обработка числа: {number}");
                Console.WriteLine($"Квадрат: {number * number}");
                Console.WriteLine($"Куб: {number * number * number}");
            }

            (int square, int cube) CalculatePowersFunction(int number)
            {
                return (number * number, number * number * number);
            }

            ProcessNumberProcedure(3);
            var result = CalculatePowersFunction(3);
            Console.WriteLine($"Квадрат: {result.square}, Куб: {result.cube}");
        }

