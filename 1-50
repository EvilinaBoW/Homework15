        // ЗАДАНИЕ 11: Метод для расчета факториала числа
        static long Factorial(int n)
        {
            if (n < 0) return -1;
            if (n == 0 || n == 1) return 1;

            long result = 1;
            for (int i = 2; i <= n; i++)
            {
                result *= i;
            }
            return result;
        }

